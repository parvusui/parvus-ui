{
  "presets": [
    [
      "env",
      {
        "modules": false,
        "targets": {
          "browsers": ["last 2 versions", "safari > 8", "not ie < 11"]
        }
      }
    ],
    "react",
    "stage-2",
    "flow"
  ],
  "env": {
    "testing": {
      "presets":[
        ["env", { "modules": false }],
        "react"
      ],
      "plugins": [
        "transform-es2015-modules-commonjs"
      ]
    },
    "development": {
      "plugins": [
        [
          "flow-react-proptypes",
          {
            "ignoreNodeModules": true
          }
        ]
      ]
    }
  }
}
